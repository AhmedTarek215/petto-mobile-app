<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewCreatePostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Post"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Post Content Input -->
        <EditText
            android:id="@+id/editTextPostContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="What's on your mind?"
            android:gravity="top|start"
            android:background="@drawable/menu_item_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:maxLines="5"
            android:minLines="3"/>

        <!-- Upload Image Button (Optional) -->
        <Button
            android:id="@+id/buttonUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image (Optional)"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/progress_active"/>

        <!-- Submit Post Button -->
        <Button
            android:id="@+id/buttonSubmitPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/progress_active"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>