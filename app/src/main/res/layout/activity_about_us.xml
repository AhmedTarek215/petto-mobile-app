<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:src="@drawable/arrow_left"
            android:contentDescription="Back"
            android:padding="4dp" />


<!--        <ImageView-->
<!--            android:id="@+id/logo"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:src="@drawable/logo" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1BBCB6"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:src="@drawable/logo" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petto is your smart companion for pet parenting. Our mobile app helps pet owners organize their daily care tasks, receive medical reminders, and explore nearby clinics, shelters, and pet hotels. Whether you're a new pet parent or an experienced one, Petto provides tailored tips, pet profiles, and a social platform to connect with fellow animal lovers. We're committed to making pet care easier, safer, and more connected."
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            android:textColor="#333" />

        <!-- Contact -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nContact Us:\nEmail: pettoo2025@gmail.com\nInstagram: pettoo2025@gmail.com"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#888" />

    </LinearLayout>
</ScrollView>
