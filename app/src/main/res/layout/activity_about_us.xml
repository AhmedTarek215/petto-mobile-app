<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFF">

    <!-- Fixed Toolbar -->
    <LinearLayout
        android:id="@+id/aboutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <!-- Back Button on the left -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:contentDescription="Back"
            android:padding="4dp" />

        <!-- Centered Title and Logo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="20.5sp"
                android:fontFamily="@font/alexandriasemibold"
                android:textColor="#1BBCB6"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:src="@drawable/logo" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content Below Toolbar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:baselineAligned="false"
                android:fontFamily="@font/alexandriaregular"
                android:text="Petto is your smart companion for pet parenting. Our mobile app helps pet owners organize their daily care tasks, receive medical reminders, and explore nearby clinics, shelters, and pet hotels. Whether you're a new pet parent or an experienced one, Petto provides tailored tips, pet profiles, and a social platform to connect with fellow animal lovers. We're committed to making pet care easier, safer, and more connected."
                android:textColor="#4F576B"
                android:textSize="15.5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/alexandriaregular"
                android:text="Contact Us:\nEmail: pettoo2025@gmail.com\nInstagram: pettoo2025@gmail.com"
                android:textColor="#4F576B"
                android:textSize="15.5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/alexandriaregular"
                android:gravity="center"
                android:text="Version 1.0"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>
</ScrollView>
    </FrameLayout>
